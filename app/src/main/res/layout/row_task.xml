<?xml version="1.0" encoding="utf-8"?>
<!-- Card item UI in the list-->
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_horizontal_margin"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:background="?android:attr/selectableItemBackground">

        <LinearLayout
            android:id="@+id/card_left_color"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.25"
            android:background="@color/colorPrimary"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="9.75"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/label_descricao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/label_prazo"
                android:layout_below="@id/label_descricao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/label_inicio"
                android:layout_below="@id/label_prazo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/label_final"
                android:layout_below="@id/label_inicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/label_prioridade"
                android:layout_below="@id/label_final"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>