<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/label_descricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_margin="8dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/label_prazo"
        android:layout_below="@id/label_descricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_margin="8dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/label_inicio"
        android:layout_below="@id/label_prazo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_margin="8dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/label_final"
        android:layout_below="@id/label_inicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_margin="8dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/label_prioridade"
        android:layout_below="@id/label_final"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_margin="8dp"
        android:textStyle="bold"
        />

</RelativeLayout>